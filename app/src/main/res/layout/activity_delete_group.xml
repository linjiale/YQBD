<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_delete_group"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.yqbd.yqbd.activities.group.ApplyJoinActivity">
    <TextView android:id="@+id/text_groupToDel_title"
              android:text="组名："
              android:layout_width="match_parent"
              android:layout_height="wrap_content"/>
    <TextView android:id="@+id/text_groupToDel_description"
              android:text="小组描述："
              android:layout_width="match_parent"
              android:layout_height="wrap_content"/>
    <TextView android:id="@+id/text_groupToDel_maxPeopleNum"
              android:text="最大成员数："
              android:layout_width="match_parent"
              android:layout_height="wrap_content"/>
    <TextView android:id="@+id/text_groupToDel_currentPeopleNum"
              android:text="已有成员数："
              android:layout_width="match_parent"
              android:layout_height="wrap_content"/>
    <Button android:id="@+id/btn_group_delete"
            android:text="删除该小组"
            android:layout_width="wrap_content" android:layout_height="wrap_content"/>


</LinearLayout>
